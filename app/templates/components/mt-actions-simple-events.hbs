<a href="{{record.linkPermanent}}" class="btn btn-default btn-sm" target="_blank">
  <i class="glyphicon glyphicon-eye-open"></i>
  {{#bs-tooltip placement="top"}}Ver{{/bs-tooltip}}
</a>
{{#link-to 'simple-events.item' record.id class="btn btn-default btn-sm"}}
  <i class="glyphicon glyphicon-pencil text-success"></i>
  {{#bs-tooltip placement="top"}}Editar{{/bs-tooltip}}
{{/link-to}}

{{#if record.published}}
  <button {{action 'changePublishedStatus' record false}} type="button" class="btn btn-default btn-sm">
    <i class="glyphicon glyphicon-unchecked text-danger"></i>
    {{#bs-tooltip placement="top"}}{{t 'content.published.btn.unpublish'}}{{/bs-tooltip}}
  </button>
{{else}}
  <button {{action 'changePublishedStatus' record true}} type="button" class="btn btn-default btn-sm">
    <i class="glyphicon glyphicon-check text-success"></i>
    {{#bs-tooltip placement="top"}}{{t 'content.published.btn.publish'}}{{/bs-tooltip}}
  </button>
{{/if}}

<button {{action 'deleteRecord' record}} type="button" class="btn btn-default btn-sm">
  <i class="glyphicon glyphicon-remove text-danger"></i>
  <span class="sr-only">Deletar</span>
  {{#bs-tooltip placement="top"}}Deletar{{/bs-tooltip}}
</button>